<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>


    <settings>
        <!-- 카멜케이스와 스네이크케이스 자동 변환 설정 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>

        <!-- 조회된 결과가 없을 시에 null을 리턴해주는 설정 -->
        <setting name="jdbcTypeForNull" value="NULL"/>
    </settings>

    <typeAliases>
        <!-- 엔터티 클래스 별칭 붙이기 -->
        <!-- <typeAlias type="com.spring.mvc.chap05.entity.Board" alias="board"/> -->
        <typeAlias type="project.blog.community.project.entity.MyCode" alias="myCode"/>
        <typeAlias type="project.blog.community.project.entity.User" alias="user"/>
        <typeAlias type="project.blog.community.project.entity.Market" alias="market"/>
        <typeAlias type="project.blog.community.project.entity.Board" alias="board"/>
        <typeAlias type="project.blog.community.project.entity.Reply" alias="reply"/>
        <typeAlias type="project.blog.community.project.entity.Favorite" alias="favorite"/>
        <typeAlias type="project.blog.community.project.entity.Follow" alias="follow"/>
        <typeAlias type="project.blog.community.project.entity.Like" alias="like"/>
        <typeAlias type="project.blog.community.project.entity.Rate" alias="rate"/>
        <typeAlias type="project.blog.community.project.entity.Diary" alias="diary"/>
        <typeAlias type="project.blog.community.otochat.domain.ChatMessage" alias="chat"/>
    </typeAliases>

    <!-- SQL을 적어놓은 XML 파일의 위치를 설정 -->
    <mappers>
        <!-- <mapper resource="mapper/BoardMapper.xml"/> -->
        <mapper resource="mapper/MyCodeMapper.xml"/>
        <mapper resource="mapper/UserMapper.xml"/>
        <mapper resource="mapper/MarketMapper.xml"/>
        <mapper resource="mapper/BoardMapper.xml"/>
        <mapper resource="mapper/ReplyMapper.xml"/>
        <mapper resource="mapper/LikeMapper.xml"/>
        <mapper resource="mapper/DiaryMapper.xml"/>
        <mapper resource="mapper/ChatMessageMapper.xml"/>
    </mappers>




</configuration>






































